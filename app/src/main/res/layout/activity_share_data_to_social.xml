<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/bg_btn_facebook_normal">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/dwe_logo_white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <LinearLayout
        android:layout_below="@+id/logoImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Welcome"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/main_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_accent"
            android:textSize="20sp"
            android:text="User name"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/main_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_name_txt"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_accent"
            android:textSize="16sp"
            android:text="Mail id" />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_name_txt"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_accent"
            android:textSize="16sp"
            android:text="Date Of Birthday:-" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <Button
            android:id="@+id/main_fb_share_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_google_plus_normal"
            android:gravity="center"
            android:text="@string/share_fb"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/main_linked_in_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/main_fb_share_button"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_linked_in"
            android:gravity="center"
            android:text="@string/share_twitter"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textAllCaps="false"/>



    </RelativeLayout>
</RelativeLayout>
